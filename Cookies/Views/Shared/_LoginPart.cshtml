@inject Microsoft.AspNetCore.Identity.SignInManager<Cookies.Models.AppUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">

        <ul class="nav navbar-nav bg-dark">
            <div class="row">
                <div class="text-white col-md-6 ps-5 pt-2">Hello, @User.Identity.Name! </div>
                <div class="col-md-6 me-auto"><a class="text-white nav-link text-end pe-5" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></div>
        
            </div>
            </ul>
    </form>
}
else
{

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" id="registerLink" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" id="loginLink" asp-controller="Account" asp-action="Login">Sign In</a>
        </li>
         <li class="nav-item">
            <a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
}